<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
   version="4.0">
   <context-param>
        <param-name>data.source</param-name>
        <!-- qui configuriamo in nome della data source da usare nel codice -->
        <param-value>jdbc/webdb</param-value>
    </context-param>
    <context-param>
        <param-name>view.outline_template</param-name>
        <param-value>outline.ftl.html</param-value>
    </context-param>
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>it.univaq.ex.webmarket.controller.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>tecnicoHome</servlet-name>
        <servlet-class>it.univaq.ex.webmarket.controller.TecnicoHome</servlet-class>
    </servlet>
   <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>it.univaq.ex.webmarket.controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminHome</servlet-name>
        <servlet-class>it.univaq.ex.webmarket.controller.AdminHome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>creaRichiesta</servlet-name>
        <servlet-class>it.univaq.ex.webmarket.controller.CreaRichiesta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>richiesta</servlet-name>
        <servlet-class>it.univaq.ex.webmarket.controller.Richiesta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>creaProposta</servlet-name>
        <servlet-class>it.univaq.ex.webmarket.controller.CreaProposta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>proposta</servlet-name>
        <servlet-class>it.univaq.ex.webmarket.controller.Proposta</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tecnicoHome</servlet-name>
        <url-pattern>/tecnicoHome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminHome</servlet-name>
        <url-pattern>/adminHome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>creaRichiesta</servlet-name>
        <url-pattern>/creaRichiesta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>richiesta</servlet-name>
        <url-pattern>/richiesta</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>creaProposta</servlet-name>
        <url-pattern>/creaProposta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>proposta</servlet-name>
        <url-pattern>/proposta</url-pattern>
    </servlet-mapping>
   
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <res-ref-name>jdbc/webmarket</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
